<div class="container">
<div class="row justify-content-center">
  <div class="col-10">
    <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true, data: { turbo: false }) do |f| %>

        <div class="row mb-3">
          <%= f.label :Username, class: "col-sm-2 col-form-label text-white"%></br>
        <div class="col-sm-10">
          <%= f.text_field :usersname, class: "form-control shadow rounded", placeholder: "Enter a username" %>
        </div>
        </div>

        <div class="row mb-3">
        <%= f.label :Email, class: "col-sm-2 col-form-label text-white" %></br>
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
        </div>
        </div>

        <div class="row mb-3">
        <%= f.label :Password, class: "col-sm-2 col-form-label text-white" %></br>
        <div class="col-sm-10">
          <%= f.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "Enter your password" %>
        </div>
        </div>

        <div class="row mb-3 justify-content-center">
          <div class="col-2">
            <%= f.submit(@user.new_record? ? "Sign up" : "Update", class: "btn btn-outline-light btn-lg")%>
          </div>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
         <%= link_to '[ Cancel and Return to articles listing ]', articles_path, class: "text-info text-decoration-none text-primary"%>
    </div>
  </div>
</div>